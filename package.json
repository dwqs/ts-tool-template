{
  "name": "ts-tools",
  "version": "0.0.1",
  "description": "A simple development template to build some tools with typescript.",
  "license": "MIT",
  "main": "dist/test.min.js",
  "typings": "dist/test.d.ts",
  "scripts": {
    "clean": "rm -rf dist types",
    "prepush": "npm run lint",
    "prebuild": "npm run prepush && ./node_modules/.bin/tsc -p ./tsconfig.types.json && rm -rf dist",
    "build": "./node_modules/.bin/rollup -c",
    "postbuild": "mv types/test.d.ts dist/",
    "lint": "./node_modules/.bin/tslint -p ./tsconfig.json --type-check src/**/*.ts",
    "fix": "./node_modules/.bin/tslint -p ./tsconfig.json --type-check --fix src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "debug": "^2.6.8",
    "husky": "^0.14.2",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-uglify": "^2.0.1",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1"
  },
  "dependencies": {}
}
